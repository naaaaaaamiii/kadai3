<body>
  <main>
   <div class="container">
    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
           <%= form_with model: @book, url: book_path(@book) ,method: :patch do |f| %>

             <div class = "field">
             <label for = "book_title">Title</label></br>
               <%= f.text_field :title %>
             </div>

             <div class ="field">
             <label for = "book_body">Option</label></br>
               <%= f.text_area :body %>
             </div>

             <div class = "submit">
               <%= f.submit 'Update Book' %>
                <!--class:"btn btn-success" -->
             </div>
            <% end %>

               <a class="show" href="/books/:id">Show</a>
               <a class="back" href="/books">Back</a>



     </div>
    </div>
   </div>
  </main>
 </body>