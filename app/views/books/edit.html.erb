<body>
  <main>
     <h1>Editing Book</h1>

       <%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

             <div class = "field">
             <label for = "book_title">Title</label>
               <%= f.text_area :title %>
             <label for = "book_body">Option</label>
               <%= f.text_fild :body %>
             </div>
             

             <div class = "submit">
               <%= f.submit ' Update Book ' %>
             </div>

              <%= link_to "Show", book_path(@book.id) %>
              <%= link_to "Back",:books %>

       <% end %>

  </main>
</body>


