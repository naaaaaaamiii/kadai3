<body>
  <main>
    <h1>User info</h1>
    <div>
      <%= image_tag @user.get_profile_image(100,100) %></br>
      
      <strong> name </strong>  <%= @user.name %></br>
      
      <strong>introduction </strong> <%= @user.introduction %>
      
      <p><%= link_to "プロフィール編集" %></p>
      
        <h1>New book</h1>
          <%= form_with model: @book do |f| %>
        <p>Title</p>
          <%= f.text_field :title %>
      
   　    <p>Option</p>
          <%= f.text_area :body %><br>
          <%= f.submit 'Create Book' %>
        
     <% end %>
         
         <!--ここから右側　-->
         
      <h1>Books detaile</h1>
        <table>
           <thead>
            <tr>
             <th></th>
             <th>Title</th>
             <th>Option</th>
             <th colspan="2"></th>
            </tr>
           </thead>

           <tbody>
            <% @books.each do |book| %>
             <tr>
              <td><%=  image_tag @user.get_profile_image(80,80) %><br><%=link_to @user.name %></td>
            
              <td><%=link_to book.title, book_path(book.id) %></td>
              <td> <%= book.body %> </td>
              <td><%=link_to "Edit" %></td>
              <td><%= link_to"Destory" %></td>
             </tr>
            <% end %>
           </tbody>
        </table>   
         
         
    </div>
  </main>
</body>