<body>
  <main>
    <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">
        <h1>User info</h1>
          <%= image_tag @user.get_profile_image(100,100) %></br>
           <table class="table">
            <tbody>
             <tr></tr>
             <tr>
              <th>name</th>
              <th><%= @user.name %></th>
             </tr>
             <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
             </tr>
            </tbody>
           </table>


           <div class="row">
             <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
            　　 <i class="fas fa-user-cog"></i>
           　 <% end %>
           </div>

           <h2 class="mt-3">New book</h2>
            <%= form_with model: @book_new do |f| %>
             <p>Title</p>
              <%= f.text_field :title %>
   　         <p>Option</p>
              <%= f.text_area :body %><br>
              <%= f.submit 'Create Book' %>
            
            <% end %>
      </div>

           <!--ここから右側　-->
           <div class="col-md-8 offset-md-1">
            <h2>Books details</h2>
             <table class="table table-hover table-inverse">
              <thead>
               <tr>
                <th></th>
                <th>title</th>
                <th>option</th>
                <th colspan="3"></th>
               </tr>
               <tbody>
                <tr>
                 <th><%=  image_tag @user.get_profile_image(80,80) %></th>
                 <th><%= link_to @book.title, book_path(@book.id) %></th>
                 <th><%= @book.body %> </th>

                 <% if @book.user == current_user %>
                    <th><%= link_to edit_book_path(@book), class:"btn btn-sm btn-success"  do %> Edit</th><% end %>
                    <th><%= link_to book_path, method: :delete, class:"btn btn-sm btn-danger","data-confirm" => "本当に削除しますか？" do %> Destroy </th><% end %>
                 <% end %>

                </tr>
               </tbody>
              </thead>
             </table>
            </tale>
           </div>

      </div>
     </div>
    </div>
