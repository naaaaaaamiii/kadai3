<body>
 <% flash.each do |message_type, message| %>
  <div><%= message %></div>
 <% end %>
  <main>
    <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">
        <%= render 'users/user', user: @user %>
           <div class="row">
             <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary btn-block" do %>
            　　 <i class="fas fa-user-cog"></i>
           　 <% end %>
           </div>
            <%= render'books/book', book_new: @book_new %>
      </div>

           <!--ここから右側　-->
           <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
             <table class="table table-hover table-inverse">
              <thead>
               <tr>
                <th></th>
                <th>title</th>
                <th>option</th>
                <th colspan="3"></th>
               </tr>
               <tbody>
                <tr>
                 <th>
                  <%=  image_tag @user.get_profile_image(80,80) %></br>
                  <%= link_to @user.name, user_path(@user) %>   
                 </th>
                 <th><%= link_to @book.title, book_path(@book.id) %></th>
                 <th><%= @book.body %> </th>

                 <% if @book.user == current_user %>
                    <th><%= link_to edit_book_path(@book), class:"btn btn-sm btn-success"  do %> Edit</th><% end %>
                    <th><%= link_to book_path, method: :delete, class:"btn btn-sm btn-danger","data-confirm" => "本当に削除しますか？" do %> Destroy </th><% end %>
                 <% end %>

                </tr>
               </tbody>
              </thead>
             </table>
            </tale>
           </div>

      </div>
     </div>
    </div>
