<body>
  <main>
    <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">
        <h1>User info</h1>
          <%= image_tag @user.get_profile_image(100,100) %></br>
           <table class="table">
            <tbody>
             <tr></tr>
             <tr>
              <th>name</th>
              <th><%= @user.name %></th>
             </tr>
             <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
             </tr>
            </tbody>
           </table>
       
      
           <div class="row">
            <a class="btn btn-outline-secondary btn-block edit_user_path(@user)" href="/user/edit">
             <i class="fas fa-user-cog"></i>
            </a>
           </div>
           
           <h2 class="mt-3">New book</h2>
            <%= form_with model: @book do |f| %>
             <p>Title</p>
              <%= f.text_field :title %>
   　         <p>Option</p>
              <%= f.text_area :body %><br>
             <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
            <% end %>
      </div> 
      
           <!--ここから右側　-->
           <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
             <table class="table table-hover table-inverse">
              <thead>
               <tr>
                <th></th>
                <th>Title</th>
                <th>Option</th>
                <th colspan="3"></th>
               </tr>
               <tbody>
                <% @books.each do |book| %>
                <tr>
                 <th><%=  image_tag @user.get_profile_image(80,80) %></th>
                 <th><%=link_to book.title, book_path(book.id) %></th>
                 <th> <%= book.body %> </th>
                </tr>
                <% end %>
               </tbody>
              </thead>
             </table>  
            </tale>
           </div>
           
      </div>
     </div>            
    </div>         
    
         
    
  </main>
</body>