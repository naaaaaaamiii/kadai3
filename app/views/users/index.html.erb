<body>
  <main>
    <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">
        <h1>User info</h1>
          <%= image_tag @user.get_profile_image(100,100) %></br>
           <table class="table">
            <tbody>
             <tr></tr>
             <tr>
              <th>name</th>
              <th><%= @user.name %></th>
             </tr>
             <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
             </tr>
            </tbody>
           </table>


           <div class="row">
             <%= link_to edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block" do %>
            　　 <i class="fas fa-user-cog"></i>
           　 <% end %>
           </div>

           <h2 class="mt-3">New book</h2>
            <%= form_with model: @book_new do |f| %>
             <p>Title</p>
              <%= f.text_field :title %>
   　         <p>Option</p>
              <%= f.text_area :body %><br>
              <%= f.submit 'Create Book' %>
            <% end %>
      </div>

           <!--ここから右側　-->
           <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
             <table class="table table-hover table-inverse">
              <thead>
               <tr>
                <th></th>
                <th>Name</th>
                <th colspan="1"></th>
               </tr>
               <tbody>
                <% @users.each do |user| %>
                <tr>
                 <th><%=  image_tag user.get_profile_image(80,80) %></th>
                 <th><%= user.name %></th>
                 <th> <%=link_to 'show', user_path(user) %> </th>
                </tr>
                <% end %>
               </tbody>
              </thead>
             </table>
            </tale>
           </div>

      </div>
     </div>
    </div>
